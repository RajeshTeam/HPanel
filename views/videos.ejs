<%- include ("../partials/head.ejs") %>
<%- include ("../partials/navbar.ejs") %>


<section>
    <div class="container" style="margin-top: 3rem">
        <% let id = 0; %>
        <% videos.forEach(author => { %>
            <div id="carID<%= id; %>" class="carousel slide" data-ride="carousel"
                 style="margin-top: 3rem; margin-bottom: 3rem">
                <div class="card bg-dark text-white">
                    <div class="card-body"><h1 style="text-align: center"><%= author.name %></h1></div>
                </div>
                <ol class="carousel-indicators">
                    <li data-target="#carID<%= id; %>" data-slide-to="0" class="active"></li>
                    <% for(let i = 0; i < author.videos.length - 1; i++) { %>
                        <li data-target="#carID<%= id; %>" data-slide-to="<%= i + 1 %>"></li>
                    <% } %>
                </ol>
                <div class="carousel-inner">
                    <% let first = true; %>
                    <% author.videos.forEach(video => { %>
                        <div class="carousel-item <% if(first) {first = false; %>active <% } %>">
                            <a href="https://www.youtube.com/watch?v=<%= video.id %>" target="_blank"><img
                                        class="d-block w-100"
                                        src="http://i3.ytimg.com/vi/<%= video.id; %>/maxresdefault.jpg"
                                        alt="First slide"></a>
                            <div class="carousel-caption d-none d-md-block"
                                 style=" background-color: rgba(55,55,55,0.8);">
                                <h5><%= video.title; %></h5>
                                <p><%= video.desc %></p>
                            </div>
                        </div>
                    <% }); %>
                </div>
                <a class="carousel-control-prev" href="#carID<%= id; %>" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"
                          style="background-color: rgba(55,55,55, 1)"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carID<%= id; %>" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"
                          style="background-color: rgba(55,55,55, 1)"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <% id++; %>
        <% }); %>
    </div>
</section>

<%- include ("../partials/footer.ejs") %>